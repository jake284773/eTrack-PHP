{% extends "layouts.single" %}

{% block title %}Manage subject sectors{% endblock %}
{% block mainclass %}col-md-8{% endblock %}

{% block content %}
  <header class="page-header">
    <ol class="breadcrumb">
      <li><a href="{{ route('home') }}">Home</a></li>
      <li class="active">Subject sectors</li>
    </ol>
    <hgroup>
      {% if session_has('successMessage') %}
        <div class="alert alert-success">
          {{ session_get('successMessage') }}
        </div>
      {% endif %}

      {% if session_has('infoMessage') %}
        <div class="alert alert-info">
          {{ session_get('infoMessage') }}
        </div>
      {% endif %}

      {% if session_has('errorMessage') %}
        <div class="alert alert-danger">
          {{ session_get('errorMessage') }}
        </div>
      {% endif %}

      <h1 class="heading-large">
          {{ block('title') }}
          <span class="pull-right">
          <a href="{{ route('admin.subjectsectors.create') }}" class="btn btn-primary btn-sm">Create one</a>
        </span>
      </h1>
    </hgroup>
  </header>

  <article>
    <table class="table table-borders table-responsive">
      <thead>
      <tr>
        <th>Subject sector code</th>
        <th>Subject sector name</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
        {% for subjectSector in subjectSectors %}
          <tr>
            <td><a href="{{ route('admin.subjectsectors.show', subjectSector.id) }}">{{ subjectSector.id }}</a></td>
            <td><a href="{{ route('admin.subjectsectors.show', subjectSector.id) }}">{{ subjectSector.name }}</a></td>
            <td>
              <a href="{{ route('admin.faculties.edit', faculty.id) }}" class="btn btn-default btn-sm">Edit</a>
              <a href="{{ route('admin.faculties.delete_confirm', faculty.id) }}" data-toggle="modal" data-target="#web-modal" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        {% else %}
          <tr><td colspan="5">No subject sectors have been found.</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </article>
{% endblock %}
