{% extends "layouts.single" %}

{% block title %}Editing user ({{ user.id }}){% endblock %}

{% block content %}
  <header class="page-header">
    <ol class="breadcrumb">
      <li><a href="{{ route('home') }}">Home</a></li>
      <li><a href="{{ route('admin.users.index') }}">Users</a></li>
      <li class="active">{{ block('title') }}</li>
    </ol>
    <hgroup>
      <h1 class="heading-large">Editing user ({{ user.id }})</h1>
    </hgroup>
  </header>

  <article>
    {% if errors is not empty %}
      <div class="alert alert-danger">
        <h4>There was a problem submitting the form</h4>

        <p>Because of the following problems:</p>

        <ol>
          {% for error in errors.all %}
            <li>{{ error }}</li>
          {% endfor %}
        </ol>
      </div>
    {% endif %}

    {% autoescape false %}
      {{ form_model(user, {'route': ['admin.users.update', user.id], 'method': 'put'}) }}
        <div class="row">
          <div class="form-group col-md-5">
            {{ form_label('id', 'User ID', {'id': 'id-label', 'class': 'control-label'}) }}
            <p class="form-control-static">{{ user.id }}</p>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-5">
            {{ form_label('full_name', 'Full name', {'id': 'full_name-label', 'class': 'control-label'}) }}
            {{ form_text('full_name', null, {'id': 'full_name', 'class': 'form-control'}) }}
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-5">
            {{ form_label('email', 'Email address', {'id': 'email-label', 'class': 'control-label'}) }}
            {{ form_email('email', null, {'id': 'email', 'class': 'form-control'}) }}
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-5">
            {{ form_label('role', 'User role', {'id': 'role-label', 'class': 'control-label'}) }}
            {{ form_select('role',
            {'': '', 'Admin': 'Admin', 'Course Organiser': 'Course Organiser', 'Tutor': 'Tutor', 'Student': 'Student'},
            null, {'id': 'role', 'class': 'form-control chosen-select', 'data-placeholder': 'Choose a role'})
            }}
          </div>
        </div>

        <hr>

        <h4>Change password</h4>

        <div class="alert alert-info">
          These fields are only required if you're changing the user's password.
        </div>

        <div class="row">
          <div class="form-group col-md-5">
            {{ form_label('password', 'New password', {'id': 'password-label', 'class': 'control-label'}) }}
            {{ form_password('password', {'id': 'password', 'class': 'form-control'}) }}
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-5">
            {{ form_label('password_confirmation', 'Repeat new password', {'id': 'password_confirmation-label', 'class': 'control-label'}) }}
            {{ form_password('password_confirmation', {'id': 'password_confirmation', 'class': 'form-control'}) }}
          </div>
        </div>

        <div class="well">
          {{ form_button('Update user', {'type': 'submit', 'class': 'btn btn-primary'}) }}
          or <a href="{{ route('admin.users.index') }}">cancel</a>
        </div>
      {{ form_close() }}
    {% endautoescape %}
  </article>
{% endblock %}