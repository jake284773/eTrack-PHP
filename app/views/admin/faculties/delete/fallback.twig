{% extends "layouts.single" %}

{% block title %}Delete faculty ({{ faculty.id }}){% endblock %}

{% block content %}
  <header class="page-header">
    <ol class="breadcrumb">
      <li><a href="{{ route('home') }}">Home</a></li>
      <li><a href="{{ route('admin.faculties.index') }}">Faculties</a></li>
      <li class="active">{{ block('title') }}</li>
    </ol>
    <hgroup>
      <h1 class="heading-large">{{ block('title') }}</h1>
    </hgroup>
  </header>

  <article>
    <p>Are you sure you want to delete the faculty ({{ faculty.name }})?</p>
    <p>Please check the details as shown in the table before continuing:</p>

    <table class="table">
      <thead>
      <tr>
        <th>Faculty code</th>
        <th>Faculty name</th>
      </tr>
      </thead>

      <tbody>
      <tr>
        <td>{{ faculty.id }}</td>
        <td>{{ faculty.name }}</td>
      </tr>
      </tbody>
    </table>

    <div class="well">
      {% autoescape false %}
        {{ form_open({'route': ['admin.faculties.destroy', faculty.id], 'method': 'delete'}) }}
          {{ form_button('Delete faculty', {'type': 'submit', 'class': 'btn btn-danger'}) }}
          <a class="btn btn-default" href="{{ route('admin.faculties.index') }}">Cancel</a>
        {{ form_close() }}
      {% endautoescape %}
    </div>
  </article>
{% endblock %}