{% extends "layouts.single" %}

{% block title %}Student group: {{ student_group.id }}{% endblock %}

{% block content %}
  <header>
    <ol class="breadcrumb">
      <li><a href="{{ route('home') }}">Home</a></li>
      <li><a href="{{ route('admin.courses.index') }}">Courses</a></li>
      <li><a href="{{ route('admin.courses.show', student_group.course.id) }}">{{ student_group.course.name }}</a></li>
      <li>Student groups</li>
      <li class="active">{{ student_group.id }}</li>
    </ol>
    {% if session_has('successMessage') %}
      <div class="alert alert-success">
        {{ session_get('successMessage') }}
      </div>
    {% endif %}

    {% if session_has('infoMessage') %}
      <div class="alert alert-info">
        {{ session_get('infoMessage') }}
      </div>
    {% endif %}

    {% if session_has('errorMessage') %}
      <div class="alert alert-danger">
        {{ session_get('errorMessage') }}
      </div>
    {% endif %}

    <h1 class="page-header">
      {{ block('title') }}
      <span class="pull-right">
        <a href="{{ route('admin.courses.student_groups.edit', [course.id, student_group.id]) }}"
           class="btn btn-sm btn-default">Edit</a>
        <a href="{{ route('admin.courses.student_groups.delete_confirm', [course.id, student_group.id]) }}" data-toggle="modal"
           data-target="#web-modal" class="btn btn-danger btn-sm">Delete</a>
      </span>
    </h1>
  </header>

  <h3>Group info</h3>

  <div class="row">
    <div class="col-md-6">
      <ul class="list-group list-group-compact">
        <li class="list-group-item"><strong>Group code:</strong> {{ student_group.id }}</li>
        <li class="list-group-item"><strong>Tutor:</strong> {{ student_group.tutor.full_name }}</li>
      </ul>
    </div>
  </div>

  <h4>Students</h4>

  <table class="table table-responsive">
    <thead>
    <tr>
      <th>Student ID</th>
      <th>Student name</th>
    </tr>
    </thead>
    <tbody>
    {% for student in student_group.students %}
      <tr>
        <td>{{ student.id }}</td>
        <td>{{ student.full_name }}</td>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
