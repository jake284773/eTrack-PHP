{% extends "layouts.single" %}

{% block title %}Delete unit ({{ unit.name }}){% endblock %}

{% block content %}
  <header class="page-header">
    <ol class="breadcrumb">
      <li><a href="{{ route('home') }}">Home</a></li>
      <li><a href="{{ route('admin.units.index') }}">Units</a></li>
      <li class="active">{{ block('title') }}</li>
    </ol>
    <hgroup>
      <h1 class="heading-large">{{ block('title') }}</h1>
    </hgroup>
  </header>

  <article>
    <p>Are you sure you want to delete the unit titled: {{ unit.name }}?</p>
    <p>Please check the details as shown in the table before continuing:</p>

    <table class="table">
      <thead>
      <tr>
        <th>Unit ID</th>
        <th>Unit number</th>
        <th>Unit name</th>
        <th>Subject sector</th>
      </tr>
      </thead>

      <tbody>
      <tr>
        <td>{{ unit.id }}</td>
        <td>{{ unit.number }}</td>
        <td>{{ unit.name }}</td>
        <td>{{ unit.subject_sector.name }}</td>
      </tr>
      </tbody>
    </table>

    <div class="well">
      {% autoescape false %}
        {{ form_open({'route': ['admin.units.destroy', unit.id], 'method': 'delete'}) }}
          {{ form_button('Delete unit', {'type': 'submit', 'class': 'btn btn-danger'}) }}
          <a class="btn btn-default" href="{{ route('admin.units.index') }}">Cancel</a>
        {{ form_close() }}
      {% endautoescape %}
    </div>
  </article>
{% endblock %}