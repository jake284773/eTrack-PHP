<!DOCTYPE html>
<html lang="en-gb">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="{{ asset('images/logo.png') }}">

  <title>{% block title %}{% endblock %} - eTrack</title>

  <link href="{{ asset('stylesheets/main.css') }}" media="screen" rel="stylesheet">
  {% block stylesheets %}
  {% endblock %}

  <!--[if lt IE 9]>
    <script src="{{ asset('javascript/ie.js') }}" type="text/javascript"></script>
  <![endif]-->
</head>

<body class="{% block bodyclass %}{% endblock %}">
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        {% if auth_check() %}
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#site-navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="collapse-title">Menu</span>
          </button>
        {% endif %}

        <a class="navbar-brand" href="{{ route('home') }}">eTrack</a>
      </div>

      <div id="site-navigation" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          {% if auth_check() and auth_user().role == "Admin" %}
            <li><a href="{{ route('home') }}">Home</a></li>
            <li><a href="{{ route('admin.courses.index') }}">Courses</a></li>
            <li><a href="{{ route('admin.units.index') }}">Course Units</a></li>
            <li><a href="{{ route('admin.users.index') }}">Users</a></li>
          {% endif %}
        </ul>

        <ul class="nav navbar-nav navbar-right">
          {% if auth_check() %}
            <li><a href="#">Your Profile</a></li>
            <li><a href="{{ route('logout') }}">Logout</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>

  <div class="{% block containertype %}container{% endblock %}">
    {% block main %}{% endblock %}
  </div>

  <footer id="page-footer">
    <div class="{{ block('containertype') }}">
      <hr>
      <p>&copy; Copyright 2014 City College Plymouth</p>
    </div>
  </footer>

  <div class="modal fade" id="web-modal" tabindex="-1" role="dialog" aria-labelledby="web-modal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
      </div>
    </div>
  </div>

  {% block scripts %}
    <script src="{{ asset('javascript/main.js') }}" type="text/javascript"></script>
    {#<script type="text/javascript">#}
      {#$.sessionTimeout();#}
    {#</script>#}
  {% endblock %}
</body>
</html>