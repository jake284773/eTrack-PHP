{% extends "layouts.single" %}

{% block title %}Home{% endblock %}

{% block content %}
  <header class="page-header">
    <hgroup><h1 class="form-title heading-large">Welcome {{ auth_user().full_name }}</h1></hgroup>
  </header>

  <p>What would you like to manage today?</p>

  <article>
    <div class="list-group">
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Faculties</h4>
        <p class="list-group-item-text">
          Create, modify and remove faculties.
        </p>
      </a>

      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Subject Sectors</h4>
        <p class="list-group-item-text">
          Create, modify and remove subject sectors for units.
        </p>
      </a>

      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Courses</h4>
        <p class="list-group-item-text">
          Create, modify and remove courses.
        </p>
      </a>

      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Course Units</h4>
        <p class="list-group-item-text">
          Create, modify and remove course units.
        </p>
      </a>

      <a href="{{ route('admin.users.index') }}" class="list-group-item">
        <h4 class="list-group-item-heading">Users</h4>
        <p class="list-group-item-text">
          Create, modify and remove students, tutors and course organisers.
        </p>
      </a>
    </div>
  </article>
{% endblock %}